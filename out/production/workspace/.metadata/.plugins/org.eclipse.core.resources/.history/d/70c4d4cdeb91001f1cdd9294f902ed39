package study06.homework;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.util.Arrays;

public class Homework13 {
	public static void main(String[] args) {
		Homework13 h13 = new Homework13();
		h13.process();

	}

	public void process() {
		String txt = readTxtFile();

		Book book = getData(txt);
//		System.out.println(book);

	}

	public Book getData(String txt) {
		
		Book book = new Book();
//		book.name(txt);
						
		String[] txtList = txt.split("\n");
//		System.out.println(Arrays.toString(txtList));
		for(String text : txtList) {
			text = text.trim();
			if(txt.contains("\"gd_name\">")) {
				System.out.println(text.replace("<h2 class=\"gd_name\">", "대치동 아이들은 이렇게 공부합니다"));
			}
			
//			System.out.println(text);
//			System.out.println("-------");
		}
		
		return book;
	}

	public String readTxtFile() {

		byte[] f = null;
		try {
			f = Files.readAllBytes(Paths.get("book.txt"));
		} catch (IOException e) {
			e.printStackTrace();
		}

		return new String(f);
	}
}


package study06.homework;

public class Deck {

	Card[] cardList;
	
	public Deck() {
		cardList = new Card[52];
		int cnt =0;
		String[] types = {"♠", "◇", "♡","♣"};
		for(String type : types) {
			for(int i=1; i<=13; i++) {
				Card c = new Card(i, type);
				cardList[cnt++] = c;
			}
		}
		
		}

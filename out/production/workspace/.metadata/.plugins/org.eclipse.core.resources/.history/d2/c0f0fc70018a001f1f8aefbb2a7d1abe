	public void method1() {
		/*
		 * ■ 
		 * ■■ 
		 * ■■■ 
		 * . 
		 * .. 
		 * ■■■■■■■■■ 
		 * 반복문을 이용해서 출력하시오.
		 */

		int row = sc.nextInt();
		for (int i = 0; i < row; i++) {
			for (int j = 0; j < i + 1; j++) {
				System.out.println("■");
			}
			System.out.println();
		}
	}

	public void method2() {
		/*
		 *          ■ 
		 *         ■■ 
		 *        ■■■ 
		 *          . 
		 *         .. 
		 *  ■■■■■■■■■ 

		 * 반복문을 이용해서 출력하시오. 앞에 공백을 넣고 뒤에 네모를 넣기
		 */

		int row = sc.nextInt();

		for (int i = 0; i < row; i++) {
			for (int space = 0; space < row - 1 - i; space++) {
				System.out.println(" ");

				for (int j = 0; j < i + 1; j++) {
					System.out.println("■");

				}
			}

		}
	}

package study04.sec06;

import java.util.Scanner;

public class Homework05 {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		Homework05 obj = new Homework05();
		obj.process();
	}

	public void process() {
//		method1();

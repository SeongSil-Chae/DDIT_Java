package study04.sec06;

import java.util.Scanner;

public class Homework05 {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		Homework05 obj = new Homework05();
		obj.process();
	}

	public void process() {
		method1();
//		method2();
//		method3();
//		method4();
//		method5();
//		method6();
//		method7();
	}
	public void method1() {
		/*
		 *       ■
		 *       ■■ 
		 *       ■■■ 
		 *       .
		 *       .. 
		 *       ■■■■■■■■■ 
		 * 		 반복문을 이용해서 출력하시오.
		 */
		
		int row = sc.nextInt();
		for(int i=0; i<row; i++) {
			for(int j=0; j<i+1; j++) {
				System.out.println("■");
			}
			System.out.println();
		}
		
		
		
	}
	
}




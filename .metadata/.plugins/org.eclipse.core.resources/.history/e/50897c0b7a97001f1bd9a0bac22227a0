public class repeat {
    
    boolean life = true; // 생명 상태를 나타내는 변수

    public void start() {
        while (life) {
            eat();
            sleep();
            code();
            
            // 예시 조건: life가 false가 되면 루프 종료
            if (life == false) {
                break;
            }
        }
    }

    public void eat() {
        System.out.println("Eating...");
    }

    public void sleep() {
        System.out.println("Sleeping...");
    }

    public void code() {
        System.out.println("Coding...");
    }

    public static void main(String[] args) {
        Repeat repeat = new Repeat();
        repeat.start();
    }
}

package study03.sec03;

import java.util.Scanner;

public class Homework02 {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		Homework02 obj = new Homework02();
		obj.process();
	}

	public void process() {
//		method1();

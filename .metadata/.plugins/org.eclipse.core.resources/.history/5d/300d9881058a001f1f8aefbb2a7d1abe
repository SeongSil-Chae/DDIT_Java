package study04.sec06;

import java.util.Scanner;

public class cssHomework05 {
	Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		cssHomework05 obj = new cssHomework05();
		obj.process();
	}

	public void process() {
		method1();
//		method2();
		method3();
//		method4();
//		method5();
//		method6();
//		method7();
	}
	
	public void method1() {
		/*
		 *    ■
		 *    ■■ 
		 *    ■■■
		 *    .
		 *    ..
		 *    ■■■■■■■■
		 *    반복문을 이용해서 출력하시오.
		 *  
		 */
		
		int row = sc.nextInt();
		for(int i=0; i<row; i++) {
			for(int j=0; j<i+1; j++) {
				System.out.print("■");
			}
			System.out.println();
		}
	}
	
	public void method2() {
		/*
		 *         ■
		 *        ■■ 
		 *       ■■■
		 *         .
		 *  ■■■■■■■■
		 * 
		 */
		int row = sc.nextInt();
		
		for(int i=0; i<row; i++) {
			for(int space = 0; space<row -1 -i; space++) {
				System.out.print(" ");
			}
			for(int j=0; j<i+1; j++) {
				System.out.print("■");
			}
			System.out.println();
		}
	}
	
	public void method3() {
		/*
		 *  ■■■■■■
		 *  .
		 *  .
		 *  ■■■
		 *  ■■
		 *  ■
		 * 
		 */
		int row = sc.nextInt();
		
			for(int i = 0; i<row; i++) {
				for(int j = row; j< row -1; j--) {
					System.out.println("■");
				}
				for(int space = i; space<row -i +1; space--) {
			}System.out.println(" ");
			}
	}
	public void method4() {
		/*
		 *  ■■■■■■
		 *       .
		 *       .
		 *     ■■■
		 *      ■■
		 *       ■
		 * 
		 */
		int row = sc.nextInt();
	}
	
